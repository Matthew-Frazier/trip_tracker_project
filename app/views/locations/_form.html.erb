<%= form_with(model: [@trip, @location], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name of Location", autofocus: true %>
    
    <%= f.label :attraction %>
    <%= f.text_field :attraction, required: true, placeholder: "What to do?", autofocus: true %>
   
    <%= f.label :rating %>
    <%= f.text_field :rating, required: true, placeholder: "Rate this", autofocus: true %>
    
    <%= f.label :note %>
    <%= f.text_field :note, required: true, placeholder: "Tell me about it", autofocus: true %>
    <%= f.submit nil, class: "ui-button"%>
  </div>
<% end %>