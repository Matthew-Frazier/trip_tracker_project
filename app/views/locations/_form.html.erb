<%= form_with(model: location, local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Name of Trip", autofocus: true %>
    
    <%= f.label :attraction %>
    <%= f.text_field :attraction, required: true, placeholder: "How Many People", autofocus: true %>
   
    <%= f.label :rating %>
    <%= f.text_field :rating, required: true, placeholder: "Stops", autofocus: true %>
    
    <%= f.label :note %>
    <%= f.text_field :note, required: true, placeholder: "Transportation Type", autofocus: true %>
    <%= f.submit nil, class: "ui-button"%>
  </div>
<% end %>